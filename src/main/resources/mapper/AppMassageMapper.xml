<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caidao.mapper.AppMassageMapper">

    <resultMap id="baseProperties" type="com.caidao.pojo.AppMassage">
        <id property="id" column="id" />
        <result property="massageName" column="massage_name" />
        <result property="taskId" column="task_id" />
        <result property="deptUsername" column="dept_username" />
        <result property="isRead" column="is_read" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <sql id="baseSql">
        ( massage_name, task_id, dept_username, is_read, create_time )
    </sql>
    
    <insert id="insertBatches" parameterType="java.util.List">
        insert into app_massage
            <include refid="baseSql" />
        values
            <foreach collection="list" item="item" index="index" separator=",">
                    ( #{item.massageName}, #{item.taskId}, #{item.deptUsername}, #{item.isRead}, #{item.createTime} )
            </foreach>
    </insert>

    <update id="updateBatches" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            update app_massage
                <set>
                    <if test="item.massage_name != null" >
                        massage_name = #{item.massage_name,jdbcType=VARCHAR},
                    </if>
                    <if test="item.task_id != null" >
                        task_id = #{item.task_id,jdbcType=INT},
                    </if>
                    <if test="item.dept_username != null" >
                        dept_username = #{item.dept_username,jdbcType=VARCHAR},
                    </if>
                    <if test="item.is_read != null" >
                        is_read = #{item.is_read,jdbcType=INT},
                    </if>
                    <if test="item.create_time != null" >
                        create_time = #{item.create_time,jdbcType=TIMESTAMP},
                    </if>
                </set>
            where id = #{item.id,jdbcType=BIGINT}
        </foreach>
    </update>

</mapper>
